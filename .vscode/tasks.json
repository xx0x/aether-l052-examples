{
    "version": "2.0.0",
    "inputs": [
        {
            "id": "example",
            "type": "pickString",
            "description": "Choose the build example",
            "options": [
                "blink",
                "blink_bootloader",
                "button",
                "button_bootloader",
            ],
            "default": "blink"
        }
    ],
    "tasks": [
        {
            "label": "clean",
            "type": "process",
            "command": "make",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "presentation": {
                "clear": true,
                "showReuseMessage": false,
                "group": "cmake"
            },
            "args": [
                "clean"
            ]
        },
        {
            "label": "flash",
            "type": "process",
            "command": "make",
            "presentation": {
                "clear": true,
                "showReuseMessage": false,
                "group": "cmake"
            },
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "args": [
                "flash-${input:example}"
            ]
        },
        {
            "label": "configure",
            "type": "process",
            "command": "./configure.sh",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "presentation": {
                "clear": true,
                "showReuseMessage": false,
                "group": "cmake"
            },
        },
        {
            "label": "build_all",
            "type": "process",
            "command": "make",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "presentation": {
                "clear": true,
                "showReuseMessage": false,
                "group": "cmake"
            },
            "args": []
        },
        {
            "label": "build",
            "type": "process",
            "command": "make",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "presentation": {
                "clear": true,
                "showReuseMessage": false,
                "group": "cmake"
            },
            "args": [
                "${input:example}"
            ]
        },
        {
            "label": "build_and_flash",
            "presentation": {
                "clear": true,
                "showReuseMessage": false,
                "group": "cmake"
            },
            "dependsOn": [
                "build",
                "flash"
            ],
            "dependsOrder": "sequence"
        },
    ]
}