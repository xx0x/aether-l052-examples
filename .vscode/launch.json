{
    "version": "0.2.0",
    "inputs": [
        {
            "id": "example",
            "type": "pickString",
            "description": "Choose the debug target",
            "options": [
                "blink",
                "blink_bootloader",
                "button",
                "button_bootloader"
            ],
            "default": "blink"
        }
    ],
    "configurations": [
        {
            "name": "J-Link",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "jlink",
            "cwd": "${workspaceRoot}",
            "executable": "build/${input:example}.elf",
            "armToolchainPath": "",
            "device": "STM32L052K8",
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 1,
            },
            "interface": "swd",
            "serialNumber": "", //
            "runToEntryPoint": "", // for example "main"
            "postRestartCommands": [],
            "postResetCommands": [],
            "preLaunchTask": "build_and_flash",
            "svdFile": "${workspaceRoot}/.vscode/STM32L052.svd",
            "showDevDebugOutput": "parsed"
        }
    ]
}